<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/client_request_details_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="9dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/worker_image"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/worker_image"
            tools:text="@string/dummy_name"
            android:id="@+id/workerName"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workerName"
            android:layout_toLeftOf="@+id/requestImage"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:textDirection="rtl"
            android:textSize="18dp"
            android:id="@+id/worker_description"
            tools:text="@string/request_desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/client_price"
            android:text="150.0 EGP"
            android:layout_alignBottom="@+id/worker_image"
            android:layout_alignEnd="@+id/worker_description" />

    </RelativeLayout>

</android.support.v7.widget.CardView>